# WhatsApp Configuration
RECIPIENT_PHONE=5491123456789@c.us
# Formato: [código país][número sin +]@c.us
# Ejemplo México: 5212345678901@c.us
# Ejemplo España: 34612345678@c.us
# Ejemplo Colombia: 573001234567@c.us
# Ejemplo Argentina: 5491123456789@c.us

# Application Settings
HOROSCOPES_SIGNS=sign1,sign2

SEND_TIME=08:00
# Hora de envío diario (formato 24h: HH:MM)

SEND_ON_STARTUP=false
# Enviar horóscopo inmediatamente al iniciar (true/false)

NODE_ENV=production
# Ambiente: development, production

# Optional Features
WEEKLY_ENABLED=false
# Habilitar resumen semanal los domingos

LOG_MESSAGES=true
# Guardar mensajes enviados en logs

# Health Check
HEALTH_PORT=3000
# Puerto para health check endpoint

# Timezone
TZ=America/Mexico_City
# Zona horaria para scheduling
# Ejemplos:
# America/Mexico_City
# Europe/Madrid  
# America/Bogota
# America/Argentina/Buenos_Aires
# America/Santo_Domingo